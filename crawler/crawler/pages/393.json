{'html': '#include <stdlib.h>\n\n#include "camera_gl.h"\n\n#include "bezier.h"\n\n\n\n#include <GL/glut.h>\n\nstatic GLint Height;\t\t/*height of window*/\n\nstatic Camera_GL *TheCamera;\n\n\nstatic Point3D P[4][4] = \n\t{{{-2.500, -2.500, 0.002},{-2.500, -1.250,0.020},{-2.500, 0.000, 0.044},{-2.500, 1.250, 0.020}},\n\t {{-1.250, -2.500, 0.020},{-1.250, -1.250, 0.210},{-1.250, 0.000, 0.458},{-1.250,1.250, 0.210}},\n\t {{0.000, -2.500, 0.044},{0.000, -1.250, 0.458},{0.000, 0.000, 1.000},{0.000,1.250, 0.458}},\n\t {{1.250, -2.500, 0.020},{1.250, -1.250, 0.210},{1.250, 0.000, 0.458},{1.250,1.250, 0.210}}};\n                      \n\nstatic void display ()\n{\n    glClear(GL_COLOR_BUFFER_BIT|GL_DEPTH_BUFFER_BIT);\n    glColor3f(0.0,0.0,0.0);\n    displayBezier(P);\n    glFlush();\n}\n \n \nstatic void reshape(int width, int height)\n{ \t\n\tsetCOP_GL(TheCamera,0.0,0.0,-6.0);\n\tsetClipPlanes_GL(TheCamera,-5.9,200.0);\n\tsetVPWindow_GL(TheCamera,-4.0,4.0,-0.5,0.75);\n\n\tclickProject_GL(TheCamera);\n\t\n    \tglViewport (0, 0, width, height); /*define the viewport*/\n}\n\t\nstatic void initialise(void) \n{\n\n\t/*GL_FLAT or GL_SMOOTH*/\t\n    \tglShadeModel(GL_FLAT);\n    \n    \t/*set the background (clear) Color to white*/\n    \tglClearColor(1.0,1.0,1.0,0.0);\n\t\n\tglEnable(GL_DEPTH_TEST);\n\t\n    \t/*set the depth buffer for clearing*/\n    \tglClearDepth(1.0);\n \t\n\t/*initialise the camera*/\n\tTheCamera = newCamera_GL();\n\tsetVRP_GL(TheCamera,0.0,0.0,0.0);\n\tsetVPN_GL(TheCamera,1.0,1.0,-0.05);\n\tsetVUV_GL(TheCamera,0.0,0.0,1.0);\n\t\n\tclickView_GL(TheCamera);\n}\n\nint main(int argc, char** argv)\n{\t\n\tint window;\n\n\tglutInit(&argc,argv);\n\t\n\t/*record the window height*/\n\tHeight = 500;\n\t\n\tglutInitWindowSize(Height,Height);\n\n\tglutInitDisplayMode(GLUT_RGBA|GLUT_DEPTH);\n\n\twindow = glutCreateWindow("Bezier");\n\t\n\t\n\tglutSetWindow(window);\n\n    \tinitialise();\n\n\t/*register callbacks*/\n\tglutDisplayFunc(display); /*display function*/\n\tglutReshapeFunc(reshape);\n\n\tglutMainLoop();\n}\n',
